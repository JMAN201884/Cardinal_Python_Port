Commandline = True
Login = False
Account1 = False
Account1user = "person"
Account1pass = "password"
Dev_Account1 = False
Dev_Account1user = "JY48572"
Dev_Account1pass = "11323535892207jY"
print()

while Commandline == True:
    
    cin = input("Cardinal/: ") # cin is a gloabal variable
    print()
    
    if cin == "login":
        
        Commandline = False
        Login = True
        print("Welcom to the python port of the Cardinal multi tool")
        print("1.Login")
        print("2.Dev Login")
        print("3.Back")
        print()
        
        cin = input("Cardinal/Login: ")
        print()
        
        while Login == True:
            
            if cin == "login":
                Commandline = False
                Login = False
                print()
                
                cinuser = input("Enter Username : ")
                print()
                
                if cinuser == Account1user:
                    
                    cinpass = input("Enter Password : ")
                    print()
                    
                    if cinpass == Account1pass:
                        Account1 = True
                        
                        while Account1 == True:
                            
                            print("Welcome Person!")
                            print("This is all there is for now.")
                            print()
                            print("1.Logout")
                            print()
                        
                            cin = input("Cardinal/Pesron/: ")
                            print()
                        
                            if cin == "logout":
                                Account1 = False
                                Commandline = True
                                
                            else:
                                print("Error choice not availiable.")
                                print()
                                Account1 = True
                                
                    else:
                        print("Wrong password please try again.")
                        print("Exiting to commandline.")
                        print()
                        Commandline = True
            
                else:
                    print("Wrong username try again.")
                    print("Exiting to commandline")
                    print()
                    Commandline = True
            
            elif cin == "dev login":
                Commandline = False
                Login = False
                print()
                
                cindevuser = input("Enter Dev Username : ")
                print()
                
                if cindevuser == Dev_Account1user:
                    
                    cindevpass = input("Enter Dev Password : ")
                    print()
                    
                    if cindevpass == Dev_Account1pass:
                        
                        print("Welcome", Dev_Account1user)
                        print()
                        print("How may I assist you today.")
                        print()
                        Commandline = True
            
            elif cin == "back":
                Commandline = True
                Login = False
                
            else:
                Login = False
                Commandline = True
                print("Error choice not a vailiable, please try again.")
                print()
            
    elif cin == "end" or "exit":
        Commandline = False
        
    else:
        Commandline = True
        Login = False
        print("Error command not availiable, please try again.")
        print()